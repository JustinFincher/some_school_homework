<%= form_with(model: plane_blueprint, local: true) do |form| %>
  <% if plane_blueprint.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(plane_blueprint.errors.count, "error") %> prohibited this plane_blueprint from being saved:</h2>

      <ul>
      <% plane_blueprint.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label "飞机型号", for: :plane_blueprint_name %>
    <%= form.select :name, BackstageProp.get_the_only_prop.plane_types,{:include_blank => 'Select One'},{id: :plane_blueprint_name, class: "form-control"} %>
  </div>

  <div class="form-group">
    <%= form.label "座舱图地址", for: :plane_blueprint_seat_map %>
    <%= form.text_field :seat_map, id: :plane_blueprint_seat_map, class: "form-control", placeholder: "请输入座舱图地址" %>
  </div>

  <div class="form-group">
    <%= form.label "描述", for: :plane_blueprint_description %>
    <%= form.text_area :description, id: :plane_blueprint_description, class: "form-control", placeholder: "请输入机型描述" %>
  </div>

  <p class="btn-group" role="group">
    <%= form.submit "保存", class:"btn btn-primary" %>
  <p/>
<% end %>
