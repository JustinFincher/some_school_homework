<p id="notice"><%= notice %></p>

<div class="row">
  <div class="col">
    <h1>飞机型号管理</h1>
  </div>
  <div class="col col-lg-2">
    <%= link_to '添加型号', new_plane_blueprint_path, :class => 'btn btn-primary btn-block' %>
  </div>
</div>
<br>

<table class="table">
  <thead>
  <tr>
    <th scope="col">#</th>
    <th scope="col">型号</th>
    <th colspan="3">操作</th>
  </tr>
  </thead>
  <tbody>
  <% @plane_blueprints.each do |plane_blueprint| %>
    <tr>
      <th scope="row"><%= plane_blueprint.id %></th>
      <td><%= plane_blueprint.name %></td>
      <td><%= link_to '展示', plane_blueprint %></td>
      <td><%= link_to '编辑', edit_plane_blueprint_path(plane_blueprint) %></td>
      <td><%= link_to '删除', plane_blueprint, method: :delete, data: {confirm: 'Are you sure?'} %></td>
    </tr>
  <% end %>
  </tbody>
</table>
