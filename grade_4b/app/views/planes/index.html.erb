<p id="notice"><%= notice %></p>

<div class="row">
  <div class="col">
    <h1>班机管理</h1>
  </div>
  <div class="col col-lg-2">
    <%= link_to '添加班机', new_plane_path, :class => 'btn btn-primary btn-block' %>
  </div>
</div>
<br>

<table class="table">
  <thead>
  <tr>
    <th scope="col">#</th>
    <th scope="col">名称</th>
    <th scope="col">种类</th>
    <th scope="col">可乘坐人数</th>
    <th colspan="3">操作</th>
  </tr>
  </thead>
  <tbody>
  <% @planes.each do |plane| %>
    <tr>
      <th scope="row"><%= user.id %></th>
      <td><%= plane.name %></td>
      <td><%= plane.type %></td>
      <td><%= plane.size %></td>
      <td><%= link_to '展示', plane %></td>
      <td><%= link_to '编辑', edit_plane_path(plane) %></td>
      <td><%= link_to '删除', plane, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
  </tbody>
</table>
